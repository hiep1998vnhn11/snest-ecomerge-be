{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "./resources/types"],
    "paths": {
      "/@/*": ["./resources/js/*"],
      "/#/*": ["./resources/types/*"]
    }
  },
  "include": [
    "./resources/js/**/*.ts",
    "./resources/types/**/*.d.ts",
    "./resources/js/**/*.tsx"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.d.ts", "**/*.test.ts"]
}
